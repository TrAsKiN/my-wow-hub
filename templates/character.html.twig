        <div class="card card-inverse" style="background-image:url('http://eu.battle.net/static-render/eu/{{ character.cover }}');">
            <div class="card-block">
                <h4 class="card-title">{{ character.name }}</h4>
                <p class="card-text">
                    <small>
                        {% if character.guild is defined and rank is not defined %}
                            {{ character.guild }}
                        {% else %}
                            {% if rank is defined %}
                                {% if rank == 0 %}
                                    MaÃ®tre de guilde
                                {% else %}
                                    Rang {{ rank }}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </small><br>
                    Niveau : <strong>{{ character.level }}</strong><br>
                    <small class="text-muted">{% if character.spec is defined %}{{ character.spec.role }} ({{ character.spec.name }}){% else %}Pas de spÃ©cialisation{% endif %}</small>
                </p>
            </div>
        </div>
    </div>
</a>
